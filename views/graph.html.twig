{% extends 'base_template.html.twig' %}


{% block titre %}
<title>Statistiques relatives au établissements labellisés Handi-tourisme</title>
{% endblock %}


{% block css %}
    <link rel="stylesheet" href="public/css/graph.css">
{% endblock %}



{% block main %}

<section>
    <h2>Chiffres 2017</h2>
    <div id="regions2017">
        <h3>Nombre d'établissements par région en 2017</h3>
        {% for region, nbCompanies in graphInfos.janvier2017.nbCompaniesByRegion %}
            {% if nbCompanies != '' %}
                <div class="graphBarDiv" style="height: {{ nbCompanies / 2}}px">
                    <span class="graphBarSpanName">{{ region }}</span>  
                    <span class="graphBarSpanValue">{{ nbCompanies }}</span>
                </div>
            {% endif %}
        {% endfor %}
    </div>
    
    <div id="handicaps2017">
        <h3>Nombre d'établissements par handicap en 2017</h3>
        {% for handicap, nbCompanies in graphInfos.janvier2017.nbCompaniesByHandicap %}
            {% if nbCompanies != '' %}
                <div class="graphBarDiv" style="height: {{ nbCompanies / 8}}px">
                    <span class="graphBarSpanName">{{ handicap }}</span>  
                    <span class="graphBarSpanValue">{{ nbCompanies }}</span>
                </div>
            {% endif %}
        {% endfor %}
    </div>
    <div id="regionsHandicaps2017">
        <h3>Nombre d'établissements par région par handicap en 2017</h3>
        <h4>Légende</h4>
        <p>Moteur<div id="légendeMoteur"></div></p>
        <p>Visuel<div id="légendeVisuel"></div></p>
        <p>Auditif<div id="légendeAuditif"></div></p>
        <p>Mental<div id="légendeMental"></div></p>
        {% for region, regionArray in graphInfos.janvier2017.nbCompaniesByRegionByHandicap %}
            <div class="RegionHandicapDiv">
            {% for handicap, nbCompanies in regionArray %}
                {% if nbCompanies != '' %}
                    <div class="graphBarQuartDiv {{ handicap}}" style="height: {{ nbCompanies }}px">
                        <span class="graphBarSpanValue">{{ nbCompanies }}</span>
                    </div>
                {% endif %}
            {% endfor %}
            </div>
            <span class="graphBarSpanName">{{ region }}</span>  
        {% endfor %}
    </div>
</section>

{% endblock %}





{% block scripts %}
{% endblock %}

